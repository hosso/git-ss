{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "simple-import-sort"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "env": {
    "es2021": true,
    "node": true
  },
  "rules": {
    "simple-import-sort/exports": 2,
    "simple-import-sort/imports": [
      2,
      {
        // Remove blank lines between groups
        "groups": [["^\\u0000", "^@?\\w", "^", "^\\."]]
      }
    ]
  }
}
